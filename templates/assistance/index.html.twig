{% extends 'base.html.twig' %}

{% block title %}Assistance index{% endblock %}

{% block body %}
    <h1>Assistance index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Message</th>
                <th>Reponse</th>
                <th>Date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for assistance in assistances %}
            <tr>
                <td>{{ assistance.id }}</td>
                <td>{{ assistance.message }}</td>
                <td>{{ assistance.reponse }}</td>
                <td>{{ assistance.date ? assistance.date|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_assistance_show', {'id': assistance.id}) }}">show</a>
                    <a href="{{ path('app_assistance_edit', {'id': assistance.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_assistance_new') }}">Create new</a>
{% endblock %}
