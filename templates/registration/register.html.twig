{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <section class="container">
        <div class="row">
        <h1>Inscription</h1>
            {{ form_errors(registrationForm) }}
                    <fieldset class="mb-3">
                        <legend>Mon identite</legend>
                        {{ form_row(registrationForm.prenom) }}
                        {{ form_row(registrationForm.nom) }}
                        {{ form_row(registrationForm.email) }}
                    </fieldset>

                    <fieldset class="mb-3">
                        <legend>Mes coordonnees</legend>
                        {{ form_row(registrationForm.adresse) }}
                        {{ form_row(registrationForm.code) }}
                        {{ form_row(registrationForm.tel) }}
                    </fieldset>

            {{ form_start(registrationForm) }}
                
                {{ form_row(registrationForm.plainPassword, {
                    label: 'Password'
                }) }}
                {{ form_row(registrationForm.RGPDConsent) }}
        
                <button type="submit" class="btn btn-primary btn-lg my-3">s'inscrire</button>
            {{ form_end(registrationForm) }}
        </div>
    </section>


    
{% endblock %}
